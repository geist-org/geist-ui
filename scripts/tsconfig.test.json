{
  "compilerOptions": {
    "baseUrl": "../",
    "outDir": "../dist",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": [
      "dom",
      "es2017"
    ],
    "skipLibCheck": true,
    "allowJs": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "files": [
    "../components/index.ts"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "esm"
  ]
}
